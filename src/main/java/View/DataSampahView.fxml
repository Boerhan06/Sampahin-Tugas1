<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DataSampahController">
   <children>
      <TableView fx:id="tabelSampah" layoutX="248.0" layoutY="14.0" prefHeight="370.0" prefWidth="340.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        <columns>
          <TableColumn fx:id="kolomNama" prefWidth="120.0" text="Nama Sampah" />
          <TableColumn fx:id="kolomJenis" prefWidth="90.0" text="Jenis" />
            <TableColumn fx:id="kolomTanggal" prefWidth="120.0" text="Tanggal Input" />
        </columns>
      </TableView>
      
      <VBox layoutX="14.0" layoutY="14.0" prefWidth="220.0" spacing="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="15.0">
         <children>
            <Label text="Masukan sampah disniii guys" />
            <Label text="Nama Sampah:" />
            <TextField fx:id="txtNama" promptText="cth: Boto Plastik" />
            
            <Label text="Jenis Sampah:" />
            <ComboBox fx:id="comboJenis" prefWidth="220.0" promptText="Pilih Jenis" />
            
            <Label text="Tanggal Input:" />
            <DatePicker fx:id="pickerTanggal" prefWidth="220.0" />
            
            <Button fx:id="btnTambah" mnemonicParsing="false" onAction="#onTambahClick" prefWidth="220.0" text="Tambah Data" />
            <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#onUpdateClick" prefWidth="220.0" text="Update Data" />
            <Button fx:id="btnHapus" mnemonicParsing="false" onAction="#onHapusClick" prefWidth="220.0" text="Hapus Data" />
             <Button fx:id="btnBersihkan" mnemonicParsing="false" onAction="#onBersihkanClick" prefWidth="220.0" text="Bersihkan Form" />
         </children>
      </VBox>
   </children>
</AnchorPane>
